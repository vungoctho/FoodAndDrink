@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using ClientDependency.Core.Mvc
@using FoodAndDrink.NodeModels
@{
    Layout = "MasterFAD.cshtml";
    var homePageNode = CurrentPage.Site().Children("fADPageHome").First();
    var homePage = ((IPublishedContent)homePageNode).As<HomePage>();
    var highlightFoods = homePage.HighlightFoods;
    var a  = highlightFoods.FirstOrDefault();
}

<script>
      $(window).load(function(){
      $('.slider')._TMS({
              show:0,
              pauseOnHover:false,
              prevBu:'.prev',
              nextBu:'.next',
              playBu:false,
              duration:800,
              preset:'fade',
              pagination:true,//'.pagination',true,'<ul></ul>'
              pagNums:false,
              slideshow:8000,
              numStatus:false,
              banners:false,
          waitBannerAnimation:false,
        progressBar:false
      })
      });

     $(window).load (
    function(){$('.carousel1').carouFredSel({auto: false,prev: '.prev',next: '.next', width: 960, items: {
      visible : {min: 1,
       max: 4
},
height: 'auto',
 width: 240,

    }, responsive: false,

    scroll: 1,

    mousewheel: false,

    swipe: {onMouse: false, onTouch: false}});


    });

</script>

<div id="fad-home">
    <div class="slider-relative">
        <div class="slider-block">
            <div class="slider">
                <ul class="items">
                    @foreach (var item in homePage.FoodImages)
                    {
                        <li><img src="@item.Url" alt=""></li>
                    }                    
                </ul>
            </div>
        </div>
    </div>

    <div class="content page1">
        <div class="zerogrid">
            <div class="row">
                <div class="col-3-5">
                    <div class="wrap-col">
                        <h2>About Food And Drink</h2>
                        <div class="page1_block col1">
                            <div class="col-1-3"><img src="~/Assets/vendor/zGourmet/images/welcome_img.png" alt=""></div>
                            <div class="col-2-3">
                                <div class="extra_wrapper">
                                    @Html.Raw(homePage.AboutFAD)
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>                
            </div>
            <div class="col-full">
                <div class="hor_separator"></div>
            </div>
            <div class="row">
                <div class="col-full">
                    <div class="wrap-col">
                        <div class="car_wrap">
                            <h2>Best Choice</h2>
                            <a href="#" class="prev"></a><a href="#" class="next"></a>
                            <ul class="carousel1">
                                @foreach (var item in homePage.HighlightFoods)
                                {
                                    <li>
                                        <div>
                                            <img src="@item.FoodImage.Url">
                                            <div class="col1 upp"> <a href="#">@Html.Raw(item.Description)</a></div>
                                            @*<span> Dorem ipsum dolor amet consectetur</span>*@
                                            <div class="price">@item.Price$</div>
                                        </div>
                                    </li>
                                }                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
